rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return signedIn() &&
        exists(/databases/$(database)/documents/usuarios/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol in ['admin', 'superadmin'];
    }

    // Public catalog (read-only)
    match /productos/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /categorias/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /subcategorias/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Users
    match /usuarios/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Orders (allow purchases from authenticated or anonymous users)
    match /pedidos/{pedidoId} {
      // Read: owner can read their own order, admins can read all
      allow read: if (signedIn() && (resource.data.usuarioId == request.auth.uid || isAdmin())) || 
                      (!signedIn() && resource.data.paypalOrderId == pedidoId);

      // Create: Anyone can create an order (for guest checkout)
      // But we validate the orderID is from PayPal using clientID
      allow create: if request.resource.data.paypalOrderId != null &&
                       request.resource.data.totalUSD > 0 &&
                       request.resource.data.items is list &&
                       request.resource.data.items.size() > 0;

      // Update/Delete: admins only (prevents users faking status/amount)
      allow update, delete: if isAdmin();
    }
  }
}
